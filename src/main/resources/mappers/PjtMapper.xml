<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.project_train.pjt.domain.PjtMapper">


    <!-- loginRow --> 

    <select id="loginRow" parameterType="com.project.project_train.pjt.dao.CustomerRequest" resultType="com.project.project_train.pjt.dao.CustomerResponse">
        select * from users
        where name = #{name} and password = #{password}
    </select>

    <!-- nameCheckRow --> 

    <select id="nameCheckRow" parameterType="java.lang.String" resultType="com.project.project_train.pjt.dao.CustomerResponse">
        select * from users
        where name = #{name}
    </select>

    <!-- pwdCheckRow --> 

    <select id="pwdCheckRow" parameterType="java.lang.String" resultType="com.project.project_train.pjt.dao.CustomerResponse">
        select * from users
        where password = #{pwd}
    </select> 

    <!-- joinRow --> 

    <insert id="joinRow" parameterType="com.project.project_train.pjt.dao.CustomerRequest">
        insert into users (password,name)
        values (#{name}, #{password});
    </insert>
    </mapper>